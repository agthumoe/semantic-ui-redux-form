{
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-props-no-spreading": "off",
    "react/sort-prop-types": "off"
  },
  "overrides": [
    {
      "files": ["src/**", "test/**"],
      "rules": {
        "import/no-unresolved": "off"
      }
    }
  ]
}
